@model bitirme.Models.otel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link href="~/css/otelprofile.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
</head>
<body>
    <div id="mainwrap">
        <header>
            <ul id="menu">
                <li><a class="profile" href="#profile" title="Profile">Profil</a><span>Some information about me</span></li>
                <li><a class="resume" href="#resume" title="Resume">resim</a></li>
                <li><a class="contact" href="#contact" title="Contact">Bizimle İletişime Geç</a><span>Get in touch</span></li>
            </ul>
        </header>
        <div style="clear:both"></div>
        <div id="content">
            <div id="profile" class="section">
                <div class="column col3">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.otelID)

                        <div class="form-group">
                            @Html.Label("Otel Adınız:", htmlAttributes: new { @class = "control-label " })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.otelAdi, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.otelAdi, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Otel Kullanıcı Adınız:", htmlAttributes: new { @class = "control-label " })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.otelkullaniciAdi, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.otelkullaniciAdi, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Otel Şifreniz:", htmlAttributes: new { @class = "control-label " })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.otelSifre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.otelSifre, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Otel E-Mailiniz:", htmlAttributes: new { @class = "control-label " })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.otelEmail, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.otelEmail, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Otel Telefonunuz:", htmlAttributes: new { @class = "control-label " })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.otelTel, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.otelTel, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Otel Adresiniz:", htmlAttributes: new { @class = "control-label " })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.adres, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.adres, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Otel Açıklamanız:", htmlAttributes: new { @class = "control-label " })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.otelaciklama, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.otelaciklama, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Kayıt" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
            <div class="section" id="resume">
                @using (Html.BeginForm("resim", "otel", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                <div class="form-horizontal">
                    <div class="form-group">                      
                        <div class="col-md-10">
                            @Html.HiddenFor(model => model.otelID, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.otelID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Resimler:", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="file" multiple name="ResimDosya" id="ResimDosya" class="form-control" /><br />
                            <span class="glyphicon glyphicon-info-sign">&nbsp;</span>
                            <span><i>Resim için Lütfen geçerli bir resim formatı kullanın.</i></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Kaydet" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                }
            </div>
            <div id="contact" class="section">
                <div class="column col3">
                    <h3>Samet İlbaş</h3>
                    <p>Kayseri,Türkiye</p>
                    <p>
                        Web: ilbassamet.com <br />
                        E-mail: lbssmt66@gmail.com
                    </p>
                </div>
                <div class="column col5 pl-50">
                    <h3>Mesaj Gönder</h3>
                    <form id="contactform">
                        <p class="column col4"><label for="name">Ad:</label><input type="text" name="name" id="name" /></p>
                        <p class="column col4"><label for="email">E-mail:</label><input type="text" name="email" id="email" /></p>
                        <p class="column col8"><label for="message">Mesaj:</label><textarea rows="5" name="message" id="message"></textarea></p>
                        <p class="column col8"><input class="button" type="button" value="Gönder" /></p>
                    </form>
                </div>
            </div>
        </div>

        <div id="footer">
            &copy; @DateTime.Now.Year
        </div>

    </div>
    <script src="/js/otelprofile.js"></script>

</body>
</html>
