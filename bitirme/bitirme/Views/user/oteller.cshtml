@model bitirme.Models.HomeIndexView
@{
    /**/

    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link href="~/css/x.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Abril+Fatface" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Bowlby+One" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Righteous" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">

</head>
<body>
    <div id="container">
        <div class="mockup">
            <div class="top">
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index","Home")">
                    <div class="sidebar-brand-icon rotate-n-15">
                        <i class="fas fa-laugh-wink" style="color:blue;font-size:30px"></i>
                    </div>
                    <div class="sidebar-brand-text mx-3" style="color:blue;font-size:25px;font-style:italic">Hadi Tatile</div>
                </a>
                <ul>
                    <li><a href="@Url.Action("Index","user")">Hakkımızda</a></li>
                    <li><a href="@Url.Action("oteller","user")">Şehirler</a></li>
                    <li><a href="@Url.Action("odalar","user")">Odalar</a></li>
                    <li><a href="@Url.Action("Index","user")">Şehirler</a></li>
                </ul>
                <ul style="margin-left:700px">
                    <li><a href="@Url.Action("userUpdate","user")">Profil</a></li>
                    <li><a href="@Url.Action("userUpdate","user")">Rezervasyonlarım</a></li>
                </ul>
            </div>
            <div class="outer-search">
                <div class="search-filter">
                    <div class="search-container">
                        <i class="glyphicon glyphicon-search" style="opacity:0.6;font-size:25px;margin-left:5px"></i>
                        <input type="text" id="search" style="font-style:italic" placeholder="Arayınız..." />
                    </div><br /><br />
                </div>
            </div>

            <div class="feeds" id="feeds">
                <div class="board s-1">
                    @foreach (var item in Model.sehir)
                    {
                        <div class="card top-challenge">
                            <div class="add">
                                <p><b><a href="@Url.Action("oteller","user",new { sad=item.sehirAd})"><i style="height:50px;" class="btn btn-info btn-lg">+</i></a></b></p>
                            </div>
                            <img src="@Url.Content(item.sehirresim)" />
                            <div class="card-footer">
                                <div class="card-info">
                                    <span class="card-maker" style="font-weight:700">
                                        Şehir Adı:@item.sehirAd
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="today s-2">
                    @foreach (var item in Model.otel)
                    {
                        <div class="card">
                            <div class="add">
                                <p><b><a href="@Url.Action("oteltarih", "user", new { oad = item.otelID,userid=Session["userID"]})"><i style="height:50px" class="btn btn-info btn-lg">+</i></a></b></p> @*href="@Url.Action("odalar", "Home", new { oad = item.otelID })"*@
                            </div>
                            <img src="@Url.Content(item.or)" />
                            <div class="card-footer">
                                <div class="card-info">
                                    <span class="card-maker" style="font-weight:700">
                                        Otel Adı:@item.otelAdi <b><a href="@Url.Action("oteldetay", "user", new { oad = item.otelID })"><i class=" btn-info" style="margin-left:100px">Otel Detaya Git</i></a></b> <br />
                                        Otel Telefon:@item.otelTel
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="yesterday s-2">
                    @foreach (var a in Model.oteloda)
                    {
                        <div class="card top-challenge">
                            <div class="add">
                                <p><b><a href="@Url.Action("odadetay","user",new { odaid=a.odaID,otelid=a.otelID})"><i style="height:50px;" class="btn btn-info btn-lg">+</i></a></b></p>
                            </div>
                            <img src="@Url.Content(a.odaresim)" />
                            <div class="card-footer">
                                <div class="card-info">
                                    <span class="card-maker" style="font-weight:700">Oda Ücreti:@a.odaucret TL</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script>
$(".feeds").scroll(function(){
    if($(this).scrollTop() > 50){
      $(".outer-search").addClass("doShadow");
    }else{
      $(".outer-search").removeClass("doShadow");
    }
  });
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</body>
</html>