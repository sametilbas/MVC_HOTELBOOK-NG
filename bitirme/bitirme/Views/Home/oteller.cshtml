@model bitirme.Models.HomeIndexView
@{
    /**/

    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link href="~/css/x.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Abril+Fatface" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Bowlby+One" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Righteous" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    
</head>
<body>
    <div id="container">
        <div class="mockup">
            <div class="top">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink" style="color:blue;font-size:30px"></i>
                </div>
                <div class="sidebar-brand-text mx-3" style="color:blue;font-size:25px;font-style:italic">Hadi Tatile</div>
                <ul>
                    <li>Hakkımızda</li>
                    <li>Oteller</li>
                    <li>Şehirler</li>

                </ul>
                <div class="user_control">
                    <div class="new" style="font-size:10px;font-weight:800">
                        <a style="color:ButtonShadow;font-size:15px; font-weight:800;" href="@Url.Action("HotelLogin","Hotel")">Otel Giriş/Kayıt</a>
                    </div>
                    <div class="new" style="font-size:10px;font-weight:800">
                        <a style="color:ButtonShadow;font-size:15px; font-weight:800;" href="@Url.Action("userRegister","user")">Giriş/Kayıt</a>&nbsp;&nbsp;&nbsp;&nbsp;
                    </div>
                </div>
            </div>
            <div class="outer-search">
                <div class="search-filter">
                    <div class="search-container">
                        <i class="glyphicon glyphicon-search" style="opacity:0.6;font-size:25px;margin-left:5px"></i>
                        <input type="text" id="search" style="font-style:italic" placeholder="Arayınız..." />
                    </div><br /><br />
                </div>
            </div>

            <div class="feeds" id="feeds">
                <div class="board s-1">
                    @foreach (var item in Model.sehir)
                    {
                        <div class="card top-challenge">
                            <div class="add">
                                <p><b><a href="@Url.Action("oteller","Home",new { sad=item.sehirAd})" data-toggle="modal" data-target="#exampleModal"><i class="glyphicon glyphicon-plus"></i></a></b></p>
                                <button type="button" class="btn btn-info btn-lg">+</button>
                            </div>
                            <img src="@Url.Content(item.sehirresim)" />
                            <div class="card-footer">
                                <div class="card-info">
                                    <span class="card-maker" style="font-weight:700">
                                        Şehir Adı:@item.sehirAd
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="today s-2">
                    @foreach (var item in Model.otel)
                    {
                        <div class="card">
                            <div class="add">
                                <p><b><a data-toggle="modal" data-target="#myModal"><i style="height:50px" class="btn btn-info btn-lg">+</i></a></b></p> @*href="@Url.Action("odalar", "Home", new { oad = item.otelID })"*@
                            </div>
                            <img src="@Url.Content(item.or)" />
                            <div class="card-footer">
                                <div class="card-info">
                                    <span class="card-maker" style="font-weight:700">
                                        Otel Adı:@item.otelAdi <br />
                                        Otel Telefon:@item.otelTel
                                    </span>
                                </div>
                            </div>
                        </div>
                        <!-- Modal -->
                        <div class="modal fade" id="myModal" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4 class="modal-title">Tarih Seçiniz</h4>
                                    </div>
                                    @using (Html.BeginForm("odadetay", "Home", FormMethod.Post))
                                    {
                                        <div class="modal-body">
                                            <label>Giriş Tarihi</label>
                                            <input type="date" name="gtarih" value="ss" />
                                            <label>Çıkış Tarihi</label>
                                            <input type="date" name="ctarih" value="ss" />
                                            <label>Kişi Sayısı</label>
                                            <input type="number" name="ksayi" value="ss" />

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                                            <a href="@Url.Action("odalar", "Home", new { oad = item.otelID})"><i style="font-style:normal" class="btn btn-default">Odalara Bak</i></a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="yesterday s-2">
                    @foreach (var a in Model.oteloda)
                    {
                        <div class="card top-challenge">
                            <div class="add">
                                <p><b><a href="@Url.Action("odadetay","Home",new { odaid=a.odaID,otelid=a.otelID})"><i style="height:50px;" class="btn btn-info btn-lg">+</i></a></b></p>
                            </div>
                            <img src="@Url.Content(a.odaresim)" />
                            <div class="card-footer">
                                <div class="card-info">
                                    <span class="card-maker" style="font-weight:700">Oda Ücreti:@a.odaucret TL</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script>
$(".feeds").scroll(function(){
    if($(this).scrollTop() > 50){
      $(".outer-search").addClass("doShadow");
    }else{
      $(".outer-search").removeClass("doShadow");
    }
  });
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</body>
</html>