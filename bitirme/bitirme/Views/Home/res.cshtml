                  <input type="file" name="res" required/>
                    @Html.ValidationMessageFor(model => model.sehirresim, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
