@model bitirme.Models.sehir

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>res</title>
</head>
<body>
    @using (Html.BeginForm("res","Home",FormMethod.Post,new {enctype="multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        
