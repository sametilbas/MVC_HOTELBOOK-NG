@model bitirme.Models.HomeIndexView
@{
    /**/

    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link href="~/css/x.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Abril+Fatface" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Bowlby+One" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Righteous" rel="stylesheet">

</head>
<body>
    <div id="container">
        <div class="mockup">
            <div class="top">
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index","Home")">
                    <div class="sidebar-brand-icon rotate-n-15">
                        <i class="fas fa-laugh-wink" style="color:blue;font-size:30px"></i>
                    </div>
                    <div class="sidebar-brand-text mx-3" style="color:blue;font-size:25px;font-style:italic">Hadi Tatile</div>
                </a>
                <ul>
                    <li><a href="@Url.Action("Index","Home")">Hakkımızda</a></li>
                    <li><a href="@Url.Action("oteller","Home")">Şehirler</a></li>
                    <li><a href="@Url.Action("odalar","Home")">Odalar</a></li>
                    <li><a href="@Url.Action("Index","Home")">Şehirler</a></li>
                </ul>
                <ul style="margin-left:700px">
                    <li><a href="@Url.Action("userRegister","user")">Giriş/Kayıt</a></li>
                    <li><a href="@Url.Action("HotelLogin","Hotel")">Otel Giriş/Kayıt</a></li>
                </ul>
            </div>
            <div class="outer-search">
                <div class="search-filter">
                    <div class="search-container">
                            <i class="glyphicon glyphicon-search" style="opacity:0.6;font-size:25px;margin-left:5px"></i>
                            <input type="text" id="search" name="search" style="font-style:italic" placeholder="Arayınız..." />
                        </div><br /><br />
                </div>
            </div>
            <div class="feeds" id="feeds">
                <div class="board s-1">
                    @foreach (var item in Model.otel)
                    {
                        <div class="card top-challenge">
                            <div class="add">                           
                                <p><b><a href="@Url.Action("odalar","Home",new { oad=item.otelID})"><i class="glyphicon glyphicon-plus"></i></a></b></p>
                            </div>
                            <img src="@Url.Content(item.or)" />
                            <div class="card-footer">
                                <div class="card-info">
                                    <span class="card-maker" style="font-weight:700">Otel Adı:@item.otelAdi <br />
                                    Otel Telefon:@item.otelTel</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="today s-2">
                    @foreach (var item in Model.sehir)
                    {
                        <div class="card">
                            <div class="add">
                                <p><b><a href="@Url.Action("oteller","Home",new { sad=item.sehirAd})"><i class="glyphicon glyphicon-plus"></i></a></b></p>
                            </div>
                            <img src="@Url.Content(item.sehirresim)" />
                            <div class="card-footer">
                                <div class="card-info">
                                    <h4>@item.sehirAd</h4>
                                    <span class="card-maker"></span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="yesterday s-2">
                    @foreach (var item in Model.oteloda)
                    {
                        <div class="card top-challenge">
                            <div class="add">
                                <p><b><a href="@Url.Action("odadetay","Home",new { odaid=item.odaID,otelid=item.otelID})"><i class="glyphicon glyphicon-plus"></i></a></b></p>
                            </div>
                            <img src="@Url.Content(item.odaresim)" />
                            <div class="card-footer">
                                <div class="card-info">
                                    <span class="card-maker" style="font-weight:700">Oda Ücreti:@item.odaucret TL</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script>
$(".feeds").scroll(function(){
    if($(this).scrollTop() > 50){
      $(".outer-search").addClass("doShadow");
    }else{
      $(".outer-search").removeClass("doShadow");
    }
  });
    </script>
</body>
</html>